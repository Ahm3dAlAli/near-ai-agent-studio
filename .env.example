# NEAR Configuration
NEAR_NETWORK=testnet  # or mainnet
NEAR_ACCOUNT_ID=your-account.testnet
NEAR_PRIVATE_KEY=your-private-key
NEAR_NODE_URL=https://rpc.testnet.fastnear.com  # FastNEAR testnet RPC endpoint

# LLM Configuration
LLM_PROVIDER=hyperbolic  # hyperbolic, openai, anthropic, or local
LLM_API_KEY=your-hyperbolic-key
LLM_MODEL=meta-llama/Llama-3.3-70B-Instruct  # Hyperbolic supports OpenAI models
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
HYPERBOLIC_API_URL=https://api.hyperbolic.ai/v1  # Hyperbolic API endpoint

# Market Data Configuration
DEFILLAMA_API_KEY=your-defillama-key  # Optional
MARKET_DATA_CACHE_TTL=300  # Cache lifetime in seconds

# Memory and Storage
REDIS_URL=redis://localhost:6379  # Optional, for distributed setups
MAX_MEMORY_ENTRIES=1000
MEMORY_PRUNING_THRESHOLD=0.8  # Prune when 80% full

# Monitoring and Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
PROMETHEUS_PORT=9090  # For metrics
ENABLE_TELEMETRY=true  # Send anonymous usage data

# Strategy Configuration
MIN_PROFIT_THRESHOLD=0.002  # 0.2% minimum profit
MAX_POSITION_SIZE=10000  # Maximum position size in USD
GAS_PRICE_THRESHOLD=0.001  # Maximum acceptable gas price
CONSENSUS_THRESHOLD=0.7  # Required agreement among agents

# Security and Risk Management
MAX_SLIPPAGE=0.01  # 1% maximum slippage
RATE_LIMIT_TRADES=10  # Max trades per minute
EMERGENCY_SHUTDOWN_THRESHOLD=0.05  # 5% unexpected loss

# Development Settings
ENABLE_DEBUG_MODE=false
TEST_MODE=false  # Set to true for testing with mock data
